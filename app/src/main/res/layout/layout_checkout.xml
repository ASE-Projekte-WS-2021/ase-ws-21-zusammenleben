<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/layoutCheckout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/inputNameCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/TextFontColor"
            android:textColorHint="@color/HintColor"
            android:hint="@string/hint_name_shoppinglist"
            />

        <TextView
            android:id="@+id/costCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:inputType="numberDecimal"
            android:fontFamily="@font/latoregular"
            android:textColorHint="@color/HintColor"
            android:hint="@string/hint_amount"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/layout_Item"
            app:layout_constraintTop_toTopOf="@+id/layout_Item" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>